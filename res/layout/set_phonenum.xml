<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/set_phonenum_disInfo"/>
    <EditText 
        android:id="@+id/set_phonenum_setNum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pic_tip_bai_bg"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/set_phonenum_YES"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/set_phonenum_YES"
            android:background="@drawable/btnxml"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"/>
        <Button 
            android:id="@+id/set_phonenum_NO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/set_phonenum_NO"
            android:background="@drawable/btnxml"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"/>
    </LinearLayout>
    

</LinearLayout>
